@model IEnumerable<QLHoKinhDoanhMVC.Models.PhanQuyen>

@{
    ViewBag.Title = "Phân quyền cho nhóm người dùng";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}
<script src="~/Style/jquery-3.1.1.min.js"></script>
<h1 class="page-header">@ViewBag.Title</h1>

@if (TempData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @TempData["AlertType"] hide">
        @Html.Raw(TempData["AlertMessage"])
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th>Mã quyền</th>
                            <th>Loại người dùng</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX" id="row_@item.MaQuyen">

                                <td>
                                    @Html.DisplayFor(modelItem => item.MaQuyen)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiQuyen)
                                </td>
                                <td>
                                    @Html.ActionLink("Cấp quyền", "Edit", new { id = item.MaQuyen }, new { @class = "btn btn-primary", type = "button" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
