@{
    var session = (QLHoKinhDoanhMVC.UserLogin)Session[QLHoKinhDoanhMVC.Common.CommonConstants.USER_SESSION];
}
@if (session == null)
{
    <nav class="navbar-right">
        <div class="navbar-header">
            <a class="navbar-brand" href="/User">Đăng nhập</a>
        </div>
    </nav>
}
else
{
    <div class="navbar-header">
        <a class="navbar-brand" href="/Manage">Quản lý</a>
    </div>

    <nav class="navbar-right">
        <div class="navbar-header">
            <div class="navbar-brand">
                Xin chào @session.UserID
            </div>
            <div class="navbar-brand">
                @Html.ActionLink("Thoát", "Logout", "User")
            </div>

        </div>
    </nav>
}




