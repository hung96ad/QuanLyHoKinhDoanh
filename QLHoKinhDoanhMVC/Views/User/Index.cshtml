@model QLHoKinhDoanhMVC.Models.LoginModel
<!DOCTYPE html>
<html lang="vi">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập</title>

    <link href="@Url.Content("~/Style/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Style/vendor/metisMenu/metisMenu.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Style/dist/css/sb-admin-2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Style/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">


</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        @using(Html.BeginForm("Login", "User", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" });

                            <fieldset>  

                                <div class="form-group">
                                     @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", @autofocus = "autofocus", required = "required", placeholder = "Tài khoản" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", required = "required", placeholder = "Mật khẩu" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe) Nhớ
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>
