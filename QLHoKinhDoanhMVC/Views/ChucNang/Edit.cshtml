@model QLHoKinhDoanhMVC.Models.ChucNang

@{
    ViewBag.Title = "Sửa chức năng " + @Model.Ten;
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="page-header">@ViewBag.Title </h1>
@if (TempData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @TempData["AlertType"] hide">
        @Html.Raw(TempData["AlertMessage"])
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Ma)
    @Html.HiddenFor(model => model.Ten)
    @Html.HiddenFor(model => model.MaDanhMuc)
    <div class="col-lg-6">
        <div class="form-group">
            <label class="control-label col-xs-2">Mô tả Action</label>
            <div class="col-xs-10">
                @Html.TextBoxFor(model => model.MoTa, new { @class = "form-control", type = "text", required = "required" })
                @Html.ValidationMessageFor(model => model.MoTa, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

